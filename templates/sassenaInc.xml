<root>
        <sample>
          <structure>
            <file>{sassena_pdb}</file>
            <format>pdb</format>
          </structure>
          <framesets>
            <frameset>
              <file>{trajectory}</file>
              <format>dcd</format>
            </frameset>
          </framesets>
          <selections>
            <selection>
              <name>rnaH</name>
              <type>file</type>
              <file>rnaH.pdb</file>
              <format>pdb</format>
              <selector>beta</selector>
              <expression>1|1\.0|1\.00</expression>
            </selection>
          </selections>
        </sample>
        <stager>
          <target>rnaH</target>
        </stager>
        <scattering>
            <type>self</type>
            <dsp>
              <type>autocorrelate</type>
              <method>fftw</method>
            </dsp>
            <vectors>
                <type>scans</type>
                <scans>
                  <scan>
                    <from>0.1</from>
                    <to>2.1</to>
                    <points>11</points>
                    <base>
                      <x>1</x>
                      <y>0</y>
                      <z>0</z>
                    </base>
                  </scan>
                </scans>
            </vectors>
            <average>
              <orientation>
                <type>vectors</type>
                <vectors>
                  <type>sphere</type>
                  <algorithm>boost_uniform_on_sphere</algorithm>
                  <resolution>1000</resolution>
                  <seed>5</seed>
                </vectors>
              </orientation>
            </average>
            <signal>
              <file>{output}</file>
              <fqt>true</fqt>
              <fq0>true</fq0>
              <fq>true</fq>
              <fq2>true</fq2>
            </signal>
        </scattering>
    <database>
      <type>file</type>
      <file>{database}</file>
    </database>
</root>
